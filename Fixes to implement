document.getElementById('userGuideBtn').addEventListener('click', function(e) {
    e.preventDefault();
    
    // Navigate to the User Guide section like other menu items
    document.querySelectorAll('.sidebar .nav-link').forEach(l => l.classList.remove('active'));
    this.classList.add('active');
    
    // Hide all content sections
    document.querySelectorAll('.content-section').forEach(section => {
        section.classList.remove('active');
    });
    
    // Create or show User Guide section
    showUserGuideSection();
});

function showUserGuideSection() {
    // Check if User Guide section already exists
    let userGuideSection = document.getElementById('user-guide');
    
    if (!userGuideSection) {
        // Create User Guide section
        userGuideSection = document.createElement('div');
        userGuideSection.id = 'user-guide';
        userGuideSection.className = 'content-section';
        
        // Add User Guide content
        userGuideSection.innerHTML = `
            <div class="section-header">
                <h2>User Guide</h2>
                <p class="text-muted">Learn how to use EcoManager Pro effectively</p>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">EcoManager Pro Documentation</h5>

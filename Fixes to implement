        const db = {
            init: function() {
                if (!localStorage.getItem('projects')) {
                    // Add sample data for demonstration
                    const sampleProjects = [
                        {
                            id: '1',
                            name: 'Burnie Coastal Restoration',
                            code: 'BCR001',
                            startDate: '2023-01-15',
                            status: 'active',
                            progress: 65,
                            description: 'Restoration of coastal vegetation in Burnie area',
                            latitude: -41.0521,
                            longitude: 145.9061
                        },
                        {
                            id: '2',
                            name: 'Tasmanian Wetlands Preservation',
                            code: 'TWP002',
                            startDate: '2023-03-10',
                            status: 'planning',
                            progress: 20,
                            description: 'Preservation and monitoring of wetland ecosystems',
                            latitude: -42.8821,
                            longitude: 147.3272
                        }
                    ];
                    localStorage.setItem('projects', JSON.stringify(sampleProjects));
                }
                if (!localStorage.getItem('assessments')) {
                    localStorage.setItem('assessments', JSON.stringify([]));
                }
                if (!localStorage.getItem('species')) {
                    localStorage.setItem('species', JSON.stringify([]));
                }
                if (!localStorage.getItem('maintenance')) {
                    localStorage.setItem('maintenance', JSON.stringify([]));
                }
            },
            
            getProjects: function() {
                return JSON.parse(localStorage.getItem('projects') || '[]');
            },
            
            saveProject: function(project) {
                const projects = this.getProjects();
                project.id = Date.now().toString();
                projects.push(project);
                localStorage.setItem('projects', JSON.stringify(projects));
                return project;
            },
            
            updateProject: function(id, updates) {
                let projects = this.getProjects();
                projects = projects.map(p => {
                    if (p.id === id) {
                        return { ...p, ...updates };
                    }
                    return p;
                });
                localStorage.setItem('projects', JSON.stringify(projects));
            },
            
            deleteProject: function(id) {
                let projects = this.getProjects();
                projects = projects.filter(p => p.id !== id);
                localStorage.setItem('projects', JSON.stringify(projects));
            },
            
            getAssessments: function() {
                return JSON.parse(localStorage.getItem('assessments') || '[]');
            },
            
            saveAssessment: function(assessment) {
                const assessments = this.getAssessments();
                assessment.id = Date.now().toString();
                assessments.push(assessment);
                localStorage.setItem('assessments', JSON.stringify(assessments));
                return assessment;
            },
            
            deleteAssessment: function(id) {
                let assessments = this.getAssessments();
                assessments = assessments.filter(a => a.id !== id);
                localStorage.setItem('assessments', JSON.stringify(assessments));
            },
            
            getSpecies: function() {
                return JSON.parse(localStorage.getItem('species') || '[]');
            },
            
            saveSpecies: function(species) {
                const allSpecies = this.getSpecies();
                species.id = Date.now().toString();
                allSpecies.push(species);
                localStorage.setItem('species', JSON.stringify(allSpecies));
                return species;
            },
            
            deleteSpecies: function(id) {
                let allSpecies = this.getSpecies();
                allSpecies = allSpecies.filter(s => s.id !== id);
                localStorage.setItem('species', JSON.stringify(allSpecies));
            },
            
            getMaintenance: function() {
                return JSON.parse(localStorage.getItem('maintenance') || '[]');
            },
            
            saveMaintenance: function(maintenance) {
                const maintenanceItems = this.getMaintenance();
                maintenance.id = Date.now().toString();
                maintenance.status = 'scheduled';
                maintenanceItems.push(maintenance);
                localStorage.setItem('maintenance', JSON.stringify(maintenanceItems));
                return maintenance;
            },
            
            updateMaintenanceStatus: function(id, status) {
                let maintenanceItems = this.getMaintenance();
                maintenanceItems = maintenanceItems.map(item => {
                    if (item.id === id) {
                        item.status = status;
                        if (status === 'completed') {
                            item.completedDate = new Date().toISOString().split('T')[0];
                        }
                    }
                    return item;
                });
                localStorage.setItem('maintenance', JSON.stringify(maintenanceItems));
            },
            
            deleteMaintenance: function(id) {
                let maintenanceItems = this.getMaintenance();
                maintenanceItems = maintenanceItems.filter(m => m.id !== id);
                localStorage.setItem('maintenance', JSON.stringify(maintenanceItems));
            }
        };


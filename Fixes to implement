        // Weather control handlers
        document.addEventListener('DOMContentLoaded', function() {
            const refreshBtn = document.getElementById('refreshWeather');
            const locationSelect = document.getElementById('weatherLocationSelect');
            const manualCoordsBtn = document.getElementById('useManualCoords');
            
            if (refreshBtn) {
                refreshBtn.addEventListener('click', loadWeatherData);
            }
            
            if (locationSelect) {
                locationSelect.addEventListener('change', function() {
                    localStorage.setItem('weatherLocation', this.value);
                    loadWeatherData();
                });
            }
            
            if (manualCoordsBtn) {
                manualCoordsBtn.addEventListener('click', function() {
                    const lat = document.getElementById('manualLat').value;
                    const lon = document.getElementById('manualLon').value;
                    
                    if (lat && lon) {
                        // Create a temporary option for manual coordinates
                        const select = document.getElementById('weatherLocationSelect');
                        const manualOption = document.createElement('option');
                        manualOption.value = 'manual';
                        manualOption.textContent = `Manual (${lat}, ${lon})`;
                        manualOption.dataset.lat = lat;
                        manualOption.dataset.lon = lon;
                        
                        // Remove existing manual option if present
                        const existingManual = Array.from(select.options).find(opt => opt.value === 'manual');
                        if (existingManual) {
                            select.removeChild(existingManual);
                        }
                        
                        select.appendChild(manualOption);
                        select.value = 'manual';
                        localStorage.setItem('weatherLocation', 'manual');
                        
                        loadWeatherData();
                    }
                });
            }
        });

        // ==================== DELETE FUNCTIONS ====================

        function deleteProject(id) {
            if (confirm('Are you sure you want to delete this project? This will also delete all associated assessments, species, and maintenance activities.')) {
                // Delete associated items
                const assessments = db.getAssessments();
                assessments.forEach(assessment => {
                    if (assessment.projectId === id) {
                        db.deleteAssessment(assessment.id);
                    }
                });
                
                const species = db.getSpecies();
                species.forEach(s => {
                    if (s.projectId === id) {
                        db.deleteSpecies(s.id);
                    }
                });
                
                const maintenance = db.getMaintenance();
                maintenance.forEach(item => {
                    if (item.projectId === id) {
                        db.deleteMaintenance(item.id);
                    }
                });
                
                // Delete the project
                db.deleteProject(id);
                loadProjects();
                loadAssessments();
                loadSpecies();
                loadMaintenance();
                loadDataSummary();
                showToast('Success', 'Project and all associated items deleted successfully');
            }
        }

        function deleteAssessment(id) {
            if (confirm('Are you sure you want to delete this assessment?')) {
                db.deleteAssessment(id);
                loadAssessments();
                loadDataSummary();
                showToast('Success', 'Assessment deleted successfully');
            }
        }

        function deleteSpecies(id) {
            if (confirm('Are you sure you want to delete this species?')) {
                db.deleteSpecies(id);
                loadSpecies();
                loadDataSummary();
                showToast('Success', 'Species deleted successfully');
            }
        }

        function deleteMaintenance(id) {
            if (confirm('Are you sure you want to delete this maintenance activity?')) {
                db.deleteMaintenance(id);
                loadMaintenance();
                loadDataSummary();
                showToast('Success', 'Maintenance activity deleted successfully');
            }
        }

        function completeMaintenance(id) {
            if (confirm('Mark this maintenance activity as completed?')) {
                db.updateMaintenanceStatus(id, 'completed');
                loadMaintenance();
                showToast('Success', 'Maintenance activity marked as completed');
            }
        }

        // ==================== UTILITY FUNCTIONS ====================

        function formatDate(dateString, format = 'full') {
            if (!dateString) return 'Not specified';
            const date = new Date(dateString);
            
            if (format === 'short') {
                return date.toLocaleDateString('en-AU', { day: '2-digit', month: '2-digit' });
            }
            
            return date.toLocaleDateString('en-AU', { day: '2-digit', month: '2-digit', year: 'numeric' });
        }

        function getProjectStatusBadgeClass(status) {
            const statusMap = {
                'planning': 'bg-info',
                'active': 'bg-success',
                'on-hold': 'bg-warning',
                'completed': 'bg-secondary'
            };
            return statusMap[status] || 'bg-secondary';
        }

        function getHealthBadgeClass(health) {
            const healthMap = {
                'excellent': 'bg-success',
                'good': 'bg-info',
                'fair': 'bg-warning',
                'poor': 'bg-danger',
                'degraded': 'bg-dark'
            };
            return healthMap[health] || 'bg-secondary';
        }

        function getSpeciesStatusBadgeClass(status) {
            const statusMap = {
                'native': 'bg-success',
                'introduced': 'bg-secondary',
                'weed': 'bg-danger',
                'pest': 'bg-warning'
            };
            return statusMap[status] || 'bg-secondary';
        }

        function getMaintenanceStatusBadgeClass(status) {
            const statusMap = {
                'scheduled': 'bg-warning',
                'completed': 'bg-success',
                'overdue': 'bg-danger'
            };
            return statusMap[status] || 'bg-secondary';
        }

        function getPriorityBadgeClass(priority) {
            const priorityMap = {
                'low': 'bg-info',
                'medium': 'bg-warning',
                'high': 'bg-danger'
            };
            return priorityMap[priority] || 'bg-secondary';
        }

        function getMaintenanceStatusClass(item) {
            const today = new Date();
            const scheduledDate = new Date(item.date);
            
            if (item.status === 'completed') return 'maintenance-completed';
            if (scheduledDate < today && item.status !== 'completed') return 'maintenance-overdue';
            return 'maintenance-pending';
        }

        // View toggle functionality
        function setupViewToggle() {
            const viewButtons = document.querySelectorAll('.view-toggle button');
            const listView = document.getElementById('list-view');
            const calendarView = document.getElementById('calendar-view');
            
            viewButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetView = this.getAttribute('data-view');
                    
                    // Update button states
                    viewButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show/hide views
                    if (targetView === 'list-view') {
                        listView.style.display = 'block';
                        calendarView.style.display = 'none';
                    } else if (targetView === 'calendar-view') {
                        listView.style.display = 'none';
                        calendarView.style.display = 'block';
                        loadCalendar();
                    }
                });
            });
        }

        // ==================== FORM BUILDER SYSTEM ====================

        const formBuilder = {
            currentForm: [],
            
            init: function() {
                this.loadFormTemplates();
                this.setupFormBuilder();
            },
            
            setupFormBuilder: function() {
                const projectSelect = document.getElementById('formBuilderProject');
                if (projectSelect) {
                    this.loadProjectsIntoSelect(projectSelect);
                    projectSelect.addEventListener('change', (e) => {
                        this.showFormBuilder(e.target.value);
                    });
                }
            },
            
            loadProjectsIntoSelect: function(selectElement) {
                const projects = db.getProjects();
                selectElement.innerHTML = '<option value="">Choose a project...</option>';
                projects.forEach(project => {
                    const option = document.createElement('option');
                    option.value = project.id;
                    option.textContent = project.name;
                    selectElement.appendChild(option);
                });
            },
            
            showFormBuilder: function(projectId) {
                const interfaceDiv = document.getElementById('form-builder-interface');
                if (!projectId) {
                    interfaceDiv.style.display = 'none';
                    return;
                }
                
                interfaceDiv.style.display = 'block';
                interfaceDiv.innerHTML = this.createFormBuilderHTML(projectId);
                this.loadExistingForm(projectId);
            },
            
            createFormBuilderHTML: function(projectId) {
                return `
                    <div class="border p-3 mb-3">
                        <h6>Form Builder</h6>
                        <div class="mb-3">
                            <label class="form-label">Form Title:</label>
                            <input type="text" class="form-control" id="formTitle" value="Custom Monitoring Form">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Add Field:</label>
                            <div class="btn-group mb-2">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="formBuilder.addField('text')">
                                    <i class="bi bi-text-paragraph"></i> Text
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="formBuilder.addField('number')">
                                    <i class="bi bi-123"></i> Number
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="formBuilder.addField('select')">
                                    <i class="bi bi-menu-down"></i> Dropdown
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="formBuilder.addField('checkbox')">
                                    <i class="bi bi-check-square"></i> Checkbox
                                </button>
                            </div>
                        </div>
                        
                        <div id="form-preview" class="border p-3 bg-light">
                            <h6>Form Preview</h6>
                            <form id="custom-form-preview"></form>
                        </div>
                        
                        <div class="mt-3">
                            <button class="btn btn-success" onclick="formBuilder.saveForm('${projectId}')">
                                <i class="bi bi-save"></i> Save Form Template
                            </button>
                            <button class="btn btn-outline-secondary" onclick="formBuilder.clearForm()">
                                <i class="bi bi-trash"></i> Clear Form
                            </button>
                        </div>
                    </div>
                `;
            },
            
            addField: function(type) {
                const fieldId = 'field_' + Date.now();
                const field = {
                    id: fieldId,
                    type: type,
                    label: 'New Field',
                    required: false,
                    options: type === 'select' ? ['Option 1', 'Option 2'] : []
                };
                
                this.currentForm.push(field);
                this.updateFormPreview();
            },
            
            updateFormPreview: function() {
                const preview = document.getElementById('custom-form-preview');
                preview.innerHTML = '';
                
                this.currentForm.forEach((field, index) => {
                    const fieldHTML = this.createFieldHTML(field, index);
                    preview.innerHTML += fieldHTML;
                });
            },
            
            createFieldHTML: function(field, index) {
                let inputHTML = '';
                
                switch(field.type) {
                    case 'text':
                        inputHTML = `<input type="text" class="form-control" placeholder="Enter text">`;
                        break;
                    case 'number':
                        inputHTML = `<input type="number" class="form-control" placeholder="Enter number">`;
                        break;
                    case 'select':
                        const options = field.options.map(opt => `<option value="${opt}">${opt}</option>`).join('');
                        inputHTML = `<select class="form-select">${options}</select>`;
                        break;
                    case 'checkbox':
                        inputHTML = `<div class="form-check">
                            <input class="form-check-input" type="checkbox">
                            <label class="form-check-label">${field.label}</label>
                        </div>`;
                        break;
                }
                
                return `
                    <div class="mb-3 form-builder-field" data-field-id="${field.id}">
                        <div class="d-flex justify-content-between align-items-center">
                            <label class="form-label">${field.label}</label>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="formBuilder.removeField(${index})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                        ${inputHTML}
                    </div>
                `;
            },
            
            removeField: function(index) {
                this.currentForm.splice(index, 1);
                this.updateFormPreview();
            },
            
            saveForm: function(projectId) {
                const formTitle = document.getElementById('formTitle').value || 'Custom Form';
                const formConfig = {
                    title: formTitle,
                    fields: this.currentForm,
                    createdAt: new Date().toISOString()
                };
                
                const templates = JSON.parse(localStorage.getItem('formTemplates') || '{}');
                templates[projectId] = formConfig;
                localStorage.setItem('formTemplates', JSON.stringify(templates));
                
                showToast('Form Saved', `Custom form "${formTitle}" has been saved for this project`, 'success');
            },
            
            loadExistingForm: function(projectId) {
                const templates = JSON.parse(localStorage.getItem('formTemplates') || '{}');
                const existingForm = templates[projectId];
                
                if (existingForm) {
                    this.currentForm = existingForm.fields || [];
                    document.getElementById('formTitle').value = existingForm.title;
                    this.updateFormPreview();
                } else {
                    this.currentForm = [];
                    document.getElementById('formTitle').value = 'Custom Monitoring Form';
                    this.updateFormPreview();
                }
            },
            
            clearForm: function() {
                if (confirm('Are you sure you want to clear the entire form?')) {
                    this.currentForm = [];
                    this.updateFormPreview();
                }
            },
            
            loadFormTemplates: function() {
                if (!localStorage.getItem('formTemplates')) {
                    localStorage.setItem('formTemplates', JSON.stringify({}));
                }
            }
        };

        // ==================== ECOSYSTEM SCORING SYSTEM ====================

        const ecosystemScoring = {
            calculateHealthScore: function(assessmentData) {
                const scores = {
                    vegetation: this.scoreVegetation(
                        parseFloat(assessmentData.vegetationCover || 0),
                        parseFloat(assessmentData.nativeSpecies || 0)
                    ),
                    weeds: this.scoreWeeds(parseFloat(assessmentData.weedCover || 0)),
                    soil: this.scoreSoil(parseInt(assessmentData.soilStability || 3)),
                    biodiversity: this.scoreBiodiversity(parseInt(assessmentData.speciesRichness || 0))
                };
                
                // Calculate weighted total
                const totalScore = (
                    scores.vegetation * 0.3 +      // 30% weight
                    scores.weeds * 0.3 +           // 30% weight  
                    scores.soil * 0.2 +            // 20% weight
                    scores.biodiversity * 0.2      // 20% weight
                );
                
                return {
                    total: Math.round(totalScore),
                    breakdown: scores,
                    rating: this.getHealthRating(totalScore)
                };
            },
            
            scoreVegetation: function(cover, nativeSpecies) {
                let score = 0;
                // Cover component (0-50 points)
                score += Math.min(cover * 0.5, 50);
                // Native species component (0-50 points)
                score += Math.min(nativeSpecies * 0.5, 50);
                return Math.min(score, 100);
            },
            
            scoreWeeds: function(cover) {
                // Inverse relationship: lower weed cover = higher score
                return Math.max(0, 100 - (cover * 1.5));
            },
            
            scoreSoil: function(stability) {
                // Convert 1-5 scale to 0-100 points
                return (stability - 1) * 25;
            },
            
            scoreBiodiversity: function(richness) {
                // Cap at 20 species for 100 points
                return Math.min(richness * 5, 100);
            },
            
            getHealthRating: function(score) {
                if (score >= 80) return 'excellent';
                if (score >= 60) return 'good';
                if (score >= 40) return 'fair';
                if (score >= 20) return 'poor';
                return 'degraded';
            },
            
            getHealthColor: function(score) {
                if (score >= 80) return 'success';
                if (score >= 60) return 'info';
                if (score >= 40) return 'warning';
                if (score >= 20) return 'danger';
                return 'dark';
            }
        };

        // ADD THESE NEW FUNCTIONS RIGHT AFTER THE ECOSYSTEM SCORING OBJECT:

        // Real-time score preview
        function setupHealthScorePreview() {
            const inputs = ['vegetationCover', 'nativeSpecies', 'weedCover', 'soilStability', 'speciesRichness'];
            
            inputs.forEach(inputId => {
                const input = document.getElementById(inputId);
                if (input) {
                    input.addEventListener('input', updateHealthScorePreview);
                }
            });
        }

        function updateHealthScorePreview() {
            const scoringData = {
                vegetationCover: document.getElementById('vegetationCover').value,
                nativeSpecies: document.getElementById('nativeSpecies').value,
                weedCover: document.getElementById('weedCover').value,
                soilStability: document.getElementById('soilStability').value,
                speciesRichness: document.getElementById('speciesRichness').value
            };
            
            // Only calculate if we have some data
            const hasData = Object.values(scoringData).some(val => val && val > 0);
            
            if (hasData) {
                const score = ecosystemScoring.calculateHealthScore(scoringData);
                
                document.getElementById('scoreValue').textContent = score.total;
                document.getElementById('scoreRating').textContent = score.rating;
                
                const progressBar = document.getElementById('scoreProgress');
                progressBar.style.width = `${score.total}%`;
                progressBar.className = `progress-bar bg-${ecosystemScoring.getHealthColor(score.total)}`;
                
                document.getElementById('scoreDisplay').classList.remove('d-none');
                document.getElementById('healthScorePreview').querySelector('.text-muted').classList.add('d-none');
            } else {
                document.getElementById('scoreDisplay').classList.add('d-none');
                document.getElementById('healthScorePreview').querySelector('.text-muted').classList.remove('d-none');
            }
        }

        // ==================== NAVIGATION ====================

        // Navigation
        document.querySelectorAll('.sidebar .nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Update active state
                document.querySelectorAll('.sidebar .nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
                
                // Show the corresponding section
                const target = this.getAttribute('data-target');
                document.querySelectorAll('.content-section').forEach(section => {
                    section.classList.remove('active');
                });
                
                setTimeout(() => {
                    document.getElementById(target).classList.add('active');
                    
                    // Load data for the section
                    if (target === 'dashboard') loadDashboard();
                    if (target === 'projects') {
                        loadProjects();
                        // Initialize map when projects section is shown
                        setTimeout(() => {
                            initProjectMap();
                        }, 100);
                    }
                    if (target === 'assessments') loadAssessments();
                    if (target === 'species') loadSpecies();
                    if (target === 'maintenance') {
                        loadMaintenance();
                        // Reset to list view when navigating to maintenance
                        document.querySelector('[data-view="list-view"]').click();
                    }
                    if (target === 'charts') loadCharts();
                    if (target === 'data') {
                        loadDataSummary();
                        loadProjectSelects();
                    }
                    if (target === 'weather') loadWeatherData();
                }, 50);
                
                // Update page title
                document.title = `${this.querySelector('span').textContent} | EcoManager Pro`;
            });
        });

        // ==================== INITIALIZATION ====================

        // Initialize the application
        function initApp() {
            db.init();
            loadDashboard();
            loadProjectSelects();
            setupViewToggle();
            loadDataSummary();
            
            // ADD THESE TWO LINES:
            formBuilder.init();
            setupHealthScorePreview();
            
            // ADD WEATHER INITIALIZATION:
            setupWeatherLocationSelector();
            loadWeatherData(); // Load weather data on app start
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        }

        // Start the app when the DOM is loaded
        document.addEventListener('DOMContentLoaded', initApp);
    </script>


Can you show me exactly the part I need to replace?

        // ==================== MAP FUNCTIONS ====================

        function initProjectMap() {
            if (projectMap) {
                projectMap.remove();
            }
            
            // Center on Burnie, Tasmania
            projectMap = L.map('projectMap').setView([-41.0521, 145.9061], 11);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(projectMap);
            
            // Add drawing tools
            const drawnItems = new L.FeatureGroup();
            projectMap.addLayer(drawnItems);
            
            const drawControl = new L.Control.Draw({
                edit: {
                    featureGroup: drawnItems
                },
                draw: {
                    polygon: {
                        allowIntersection: false,
                        showArea: true,
                        shapeOptions: {
                            color: '#2c5530'
                        }
                    },
                    polyline: false,
                    circle: false,
                    rectangle: false,
                    marker: {
                        icon: L.icon({
                            iconUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/images/marker-icon.png',
                            shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/images/marker-shadow.png',
                            iconSize: [25, 41],
                            iconAnchor: [12, 41]
                        })
                    }
                }
            });
            projectMap.addControl(drawControl);
            
            // Handle drawn items
            projectMap.on(L.Draw.Event.CREATED, function (e) {
                const type = e.layerType;
                const layer = e.layer;
                
                if (type === 'marker') {
                    const latlng = layer.getLatLng();
                    setProjectMarker(latlng.lat, latlng.lng);
                } else if (type === 'polygon') {
                    drawnItems.addLayer(layer);
                    saveProjectBoundary(layer.getLatLngs());
                }
            });
            
            // Add existing marker if coordinates exist
            const latInput = document.getElementById('projectLatitude');
            const lngInput = document.getElementById('projectLongitude');
            
            if (latInput.value && lngInput.value) {
                setProjectMarker(parseFloat(latInput.value), parseFloat(lngInput.value));
            }
            
            return projectMap;
        }

        function setProjectMarker(lat, lng) {
            // Update form fields
            document.getElementById('projectLatitude').value = lat;
            document.getElementById('projectLongitude').value = lng;
            
            // Remove existing marker
            if (projectMarker) {
                projectMap.removeLayer(projectMarker);
            }
            
            // Add new marker
            projectMarker = L.marker([lat, lng]).addTo(projectMap)
                .bindPopup('Project Location')
                .openPopup();
            
            // Center map on marker
            projectMap.setView([lat, lng], 10);
        }

        // NEW FUNCTION: Save project boundary
        function saveProjectBoundary(latlngs) {
            const boundary = latlngs[0].map(latlng => [latlng.lat, latlng.lng]);
            
            // Calculate area
            const polygon = turf.polygon([boundary]);
            const area = turf.area(polygon);
            const areaHectares = (area / 10000).toFixed(2);
            
            // Show area to user
            showToast('Project Area', `Project boundary set. Area: ${areaHectares} hectares`, 'success');
            
            // Store in form data (you can add a hidden field for this later)
            console.log('Project boundary:', boundary, 'Area:', areaHectares, 'hectares');
        }

        // NEW FUNCTION: GPX/KML Import
        function handleFileImport(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                showToast('File Import', 'GPX/KML file imported successfully. Add markers manually for now.', 'info');
            };
            reader.readAsText(file);
        }

        function clearProjectMarker() {
            if (projectMarker) {
                projectMap.removeLayer(projectMarker);
                projectMarker = null;
            }
            document.getElementById('projectLatitude').value = '';
            document.getElementById('projectLongitude').value = '';
        }

        function useCurrentLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;
                        setProjectMarker(lat, lng);
                    },
                    function(error) {
                        showToast('Location Error', 'Unable to retrieve your location: ' + error.message, 'error');
                    }
                );
            } else {
                showToast('Location Error', 'Geolocation is not supported by this browser', 'error');
            }
        }

        function showProjectInModal(project) {
            const modalTitle = document.getElementById('projectMapModalTitle');
            const modalMapContainer = document.getElementById('modalProjectMap');
            const modalCoordinates = document.getElementById('modalCoordinates');
            
            modalTitle.textContent = `${project.name} Location`;
            
            // Clear previous map
            if (modalProjectMap) {
                modalProjectMap.remove();
                modalProjectMap = null;
            }
            
            // Clear the map container
            modalMapContainer.innerHTML = '';
            
            // Show modal first, then initialize map
            const modal = new bootstrap.Modal(document.getElementById('projectMapModal'));
            modal.show();
            
            // Initialize map after modal is fully shown
            setTimeout(() => {
                // Recreate the map container element
                modalMapContainer.innerHTML = '<div id="modalMap" style="height: 100%; width: 100%;"></div>';
                
                // Initialize map
                modalProjectMap = L.map('modalMap').setView([0, 0], 2);
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap contributors'
                }).addTo(modalProjectMap);
                
                // Add marker if coordinates exist
                if (project.latitude && project.longitude) {
                    const lat = parseFloat(project.latitude);
                    const lng = parseFloat(project.longitude);
                    
                    modalProjectMarker = L.marker([lat, lng]).addTo(modalProjectMap)
                        .bindPopup(project.name)
                        .openPopup();
                    
                    modalProjectMap.setView([lat, lng], 10);
                    modalCoordinates.textContent = `Coordinates: ${lat.toFixed(6)}, ${lng.toFixed(6)}`;
                    
                    // Force resize and invalidate map size
                    setTimeout(() => {
                        modalProjectMap.invalidateSize();
                    }, 100);
                } else {
                    modalCoordinates.textContent = 'Coordinates: Not specified';
                    // Force resize for default view too
                    setTimeout(() => {
                        modalProjectMap.invalidateSize();
                    }, 100);
                }
            }, 300); // Small delay to ensure modal is visible
        }

        // ==================== UI FUNCTIONS ====================

        function showToast(title, message, type = 'success') {
            const toast = document.getElementById('liveToast');
            const toastTitle = document.getElementById('toast-title');
            const toastMessage = document.getElementById('toast-message');
            
            toastTitle.textContent = title;
            toastMessage.textContent = message;
            
            const header = toast.querySelector('.toast-header');
            header.className = 'toast-header';
            
            switch(type) {
                case 'error':
                    header.classList.add('bg-danger', 'text-white');
                    break;
                case 'warning':
                    header.classList.add('bg-warning', 'text-dark');
                    break;
                case 'info':
                    header.classList.add('bg-info', 'text-white');
                    break;
                default:
                    header.classList.add('bg-success', 'text-white');
            }
            
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }

        function loadProjectSelects() {
            const projects = db.getProjects();
            const projectSelects = document.querySelectorAll('#assessmentProject, #speciesProject, #maintenanceProject, #assessmentProjectFilter, #speciesProjectFilter, #maintenanceProjectFilter, #exportProject, #formBuilderProject');
            
            projectSelects.forEach(select => {
                const isFilter = select.id.includes('Filter') || select.id === 'exportProject';
                const currentValue = select.value;
                
                // Clear existing options except the first one
                while(select.options.length > (isFilter ? 1 : 1)) {
                    select.remove(1);
                }
                
                // Add project options
                projects.forEach(project => {
                    const option = document.createElement('option');
                    option.value = project.id;
                    option.textContent = project.name;
                    select.appendChild(option);
                });
                
                // Try to restore previous selection
                if (currentValue && Array.from(select.options).some(opt => opt.value === currentValue)) {
                    select.value = currentValue;
                }
            });
        }

        function getProjectName(projectId) {
            if (!projectId) return 'Unassigned';
            const projects = db.getProjects();
            const project = projects.find(p => p.id === projectId);
            return project ? project.name : 'Unknown Project';
        }

        function loadDashboard() {
            // Update counts
            document.getElementById('projects-count').textContent = db.getProjects().length;
            document.getElementById('assessments-count').textContent = db.getAssessments().length;
            document.getElementById('species-count').textContent = db.getSpecies().length;
            document.getElementById('maintenance-count').textContent = db.getMaintenance().length;
            
            // Load recent activities (last 5 assessments)
            const assessments = db.getAssessments();
            const recentActivities = assessments.slice(-5).reverse();
            const activitiesTable = document.getElementById('recent-activities');
            activitiesTable.innerHTML = '';
            
            if (recentActivities.length === 0) {
                activitiesTable.innerHTML = '<tr><td colspan="5" class="text-center">No activities recorded</td></tr>';
            } else {
                recentActivities.forEach(activity => {
                    const row = activitiesTable.insertRow();
                    row.innerHTML = `
                        <td>${formatDate(activity.date)}</td>
                        <td>Assessment</td>
                        <td>${activity.description.substring(0, 50)}...</td>
                        <td>${getProjectName(activity.projectId)}</td>
                        <td><span class="badge ${getHealthBadgeClass(activity.health)}">${activity.health.charAt(0).toUpperCase() + activity.health.slice(1)}</span></td>
                    `;
                });
            }
            
            // Load upcoming maintenance
            const maintenanceItems = db.getMaintenance();
            const upcomingMaintenance = maintenanceItems
                .filter(item => item.status === 'scheduled')
                .sort((a, b) => new Date(a.date) - new Date(b.date))
                .slice(0, 5);
                
            const upcomingContainer = document.getElementById('upcoming-maintenance');
            upcomingContainer.innerHTML = '';
            
            if (upcomingMaintenance.length === 0) {
                upcomingContainer.innerHTML = '<p class="text-center">No upcoming maintenance</p>';
            } else {
                upcomingMaintenance.forEach(item => {
                    const itemElement = document.createElement('div');
                    itemElement.className = `maintenance-item ${getMaintenanceStatusClass(item)}`;
                    itemElement.innerHTML = `
                        <h6>${item.activity} (${getProjectName(item.projectId)})</h6>
                        <p class="mb-1">${formatDate(item.date)} - ${item.type.replace('-', ' ').toUpperCase()}</p>
                        <span class="badge ${getPriorityBadgeClass(item.priority)}">${item.priority.toUpperCase()}</span>
                    `;
                    upcomingContainer.appendChild(itemElement);
                });
            }
            
            // Load charts
            loadCharts();
        }

        function loadProjects() {
            const projects = db.getProjects();
            const projectsTable = document.getElementById('projects-table');
            projectsTable.innerHTML = '';
            
            if (projects.length === 0) {
                projectsTable.innerHTML = '<tr><td colspan="10" class="text-center">No projects created yet</td></tr>';
            } else {
                projects.forEach(project => {
                    // Count related items
                    const assessments = db.getAssessments().filter(a => a.projectId === project.id).length;
                    const maintenance = db.getMaintenance().filter(m => m.projectId === project.id).length;
                    const species = db.getSpecies().filter(s => s.projectId === project.id).length;
                    
                    // Create location preview
                    let locationCell = '<span class="text-muted">Not set</span>';
                    if (project.latitude && project.longitude) {
                        locationCell = `
                            <div class="d-flex align-items-center">
                                <div class="map-preview me-2" 
                                     style="width: 100px; background-color: #f8f9fa;"
                                     onclick="showProjectInModal(${JSON.stringify(project).replace(/"/g, '&quot;')})">
                                    <div class="w-100 h-100 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-geo-alt-fill text-primary"></i>
                                    </div>
                                </div>
                                <button class="btn btn-sm btn-outline-primary" 
                                        onclick="showProjectInModal(${JSON.stringify(project).replace(/"/g, '&quot;')})">
                                    <i class="bi bi-eye"></i> View
                                </button>
                            </div>
                        `;
                    }
                    
                    const row = projectsTable.insertRow();
                    row.innerHTML = `
                        <td>${project.name}</td>
                        <td>${project.code || '-'}</td>
                        <td><span class="badge ${getProjectStatusBadgeClass(project.status)}">${project.status.charAt(0).toUpperCase() + project.status.slice(1)}</span></td>
                        <td>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar" role="progressbar" style="width: ${project.progress || 0}%;" 
                                     aria-valuenow="${project.progress || 0}" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small>${project.progress || 0}%</small>
                        </td>
                        <td>${formatDate(project.startDate)}</td>
                        <td>${locationCell}</td>
                        <td>${assessments}</td>
                        <td>${maintenance}</td>
                        <td>${species}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1" onclick="editProject('${project.id}')">Edit</button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteProject('${project.id}')">Delete</button>
                        </td>
                    `;
                });
            }
            
            // Update project selects in other forms
            loadProjectSelects();
        }

        function editProject(id) {
            const projects = db.getProjects();
            const project = projects.find(p => p.id === id);
            
            if (project) {
                // Populate form with project data
                document.getElementById('projectName').value = project.name;
                document.getElementById('projectCode').value = project.code || '';
                document.getElementById('projectStartDate').value = project.startDate;
                document.getElementById('projectStatus').value = project.status;
                document.getElementById('projectProgress').value = project.progress || 0;
                document.getElementById('progressValue').textContent = `${project.progress || 0}%`;
                document.getElementById('projectDescription').value = project.description;
                
                if (project.latitude && project.longitude) {
                    document.getElementById('projectLatitude').value = project.latitude;
                    document.getElementById('projectLongitude').value = project.longitude;
                    setProjectMarker(project.latitude, project.longitude);
                } else {
                    clearProjectMarker();
                }
                
                // Change form to update mode
                const form = document.getElementById('projectForm');
                form.dataset.editId = id;
                form.querySelector('button[type="submit"]').textContent = 'Update Project';
                
                // Scroll to form
                document.getElementById('projects').scrollIntoView({ behavior: 'smooth' });
            }
        }

        function loadAssessments() {
            const assessments = db.getAssessments();
            const projectFilter = document.getElementById('assessmentProjectFilter').value;
            
            // Filter assessments if a specific project is selected
            let filteredAssessments = assessments;
            if (projectFilter !== 'all') {
                filteredAssessments = assessments.filter(a => a.projectId === projectFilter);
            }
            
            const assessmentsTable = document.getElementById('assessments-table');
            assessmentsTable.innerHTML = '';
            
            if (filteredAssessments.length === 0) {
                assessmentsTable.innerHTML = '<tr><td colspan="5" class="text-center">No assessments recorded</td></tr>';
            } else {
                filteredAssessments.forEach(assessment => {
                    const row = assessmentsTable.insertRow();
                    row.innerHTML = `
                        <td>${formatDate(assessment.date)}</td>
                        <td>${assessment.assessor}</td>
                        <td><span class="badge ${getHealthBadgeClass(assessment.health)}">${assessment.health.charAt(0).toUpperCase() + assessment.health.slice(1)}</span></td>
                        <td>${getProjectName(assessment.projectId)}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteAssessment('${assessment.id}')">Delete</button>
                        </td>
                    `;
                });
            }
        }

        function loadSpecies() {
            const species = db.getSpecies();
            const projectFilter = document.getElementById('speciesProjectFilter').value;
            
            // Filter species if a specific project is selected
            let filteredSpecies = species;
            if (projectFilter !== 'all') {
                filteredSpecies = species.filter(s => s.projectId === projectFilter);
            }
            
            const speciesTable = document.getElementById('species-table');
            speciesTable.innerHTML = '';
            
            if (filteredSpecies.length === 0) {
                speciesTable.innerHTML = '<tr><td colspan="6" class="text-center">No species recorded</td></tr>';
            } else {
                filteredSpecies.forEach(s => {
                    const row = speciesTable.insertRow();
                    row.innerHTML = `
                        <td>${s.name}</td>
                        <td>${s.scientificName || '-'}</td>
                        <td>${s.type.charAt(0).toUpperCase() + s.type.slice(1)}</td>
                        <td><span class="badge ${getSpeciesStatusBadgeClass(s.status)}">${s.status.charAt(0).toUpperCase() + s.status.slice(1)}</span></td>
                        <td>${getProjectName(s.projectId)}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteSpecies('${s.id}')">Delete</button>
                        </td>
                    `;
                });
            }
        }

        function loadMaintenance() {
            const maintenanceItems = db.getMaintenance();
            const projectFilter = document.getElementById('maintenanceProjectFilter').value;
            
            // Filter maintenance if a specific project is selected
            let filteredMaintenance = maintenanceItems;
            if (projectFilter !== 'all') {
                filteredMaintenance = maintenanceItems.filter(m => m.projectId === projectFilter);
            }
            
            const maintenanceTable = document.getElementById('maintenance-table');
            maintenanceTable.innerHTML = '';
            
            if (filteredMaintenance.length === 0) {
                maintenanceTable.innerHTML = '<tr><td colspan="7" class="text-center">No maintenance activities scheduled</td></tr>';
            } else {
                filteredMaintenance.forEach(item => {
                    const row = maintenanceTable.insertRow();
                    row.innerHTML = `
                        <td>${item.activity}</td>
                        <td>${item.type.replace('-', ' ').toUpperCase()}</td>
                        <td>${formatDate(item.date)}</td>
                        <td><span class="badge ${getMaintenanceStatusBadgeClass(item.status)}">${item.status.charAt(0).toUpperCase() + item.status.slice(1)}</span></td>
                        <td><span class="badge ${getPriorityBadgeClass(item.priority)}">${item.priority.toUpperCase()}</span></td>
                        <td>${getProjectName(item.projectId)}</td>
                        <td>
                            ${item.status === 'scheduled' ? 
                                `<button class="btn btn-sm btn-outline-success me-1" onclick="completeMaintenance('${item.id}')">Complete</button>` : 
                                ''}
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteMaintenance('${item.id}')">Delete</button>
                        </td>
                    `;
                });
            }
            
            // Also update the calendar if it exists
            if (calendar) {
                calendar.refetchEvents();
            }
        }

        function loadCalendar() {
            const calendarEl = document.getElementById('calendar');
            
            if (calendar) {
                calendar.destroy();
            }
            
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: function(fetchInfo, successCallback, failureCallback) {
                    const maintenanceItems = db.getMaintenance();
                    const events = maintenanceItems.map(item => {
                        let color;
                        switch(item.priority) {
                            case 'high': color = '#dc3545'; break;
                            case 'medium': color = '#ffc107'; break;
                            default: color = '#28a745';
                        }
                        
                        if (item.status === 'completed') {
                            color = '#6c757d';
                        } else if (item.status === 'overdue') {
                            color = '#dc3545';
                        }
                        
                        return {
                            id: item.id,
                            title: `${item.activity} (${getProjectName(item.projectId)})`,
                            start: item.date,
                            allDay: true,
                            backgroundColor: color,
                            borderColor: color,
                            extendedProps: {
                                type: item.type,
                                priority: item.priority,
                                status: item.status,
                                description: item.description,
                                projectId: item.projectId
                            }
                        };
                    });
                    
                    successCallback(events);
                },
                eventClick: function(info) {
                    const event = info.event;
                    const statusClass = getMaintenanceStatusBadgeClass(event.extendedProps.status);
                    const priorityClass = getPriorityBadgeClass(event.extendedProps.priority);
                    
                    const modalContent = `
                        <p><strong>Project:</strong> ${getProjectName(event.extendedProps.projectId)}</p>
                        <p><strong>Date:</strong> ${formatDate(event.startStr)}</p>
                        <p><strong>Type:</strong> ${event.extendedProps.type.replace('-', ' ').toUpperCase()}</p>
                        <p><strong>Priority:</strong> <span class="badge ${priorityClass}">${event.extendedProps.priority.toUpperCase()}</span></p>
                        <p><strong>Status:</strong> <span class="badge ${statusClass}">${event.extendedProps.status.charAt(0).toUpperCase() + event.extendedProps.status.slice(1)}</span></p>
                        <p><strong>Description:</strong> ${event.extendedProps.description}</p>
                    `;
                    
                    // Update modal content
                    document.getElementById('modalMaintenanceTitle').textContent = event.title;
                    document.getElementById('modalMaintenanceBody').innerHTML = modalContent;
                    
                    // Show/hide complete button
                    const completeButton = document.getElementById('modalCompleteButton');
                    if (event.extendedProps.status === 'scheduled') {
                        completeButton.style.display = 'block';
                        completeButton.onclick = function() {
                            completeMaintenance(event.id);
                            $('#maintenanceModal').modal('hide');
                        };
                    } else {
                        completeButton.style.display = 'none';
                    }
                    
                    // Show modal
                    const modal = new bootstrap.Modal(document.getElementById('maintenanceModal'));
                    modal.show();
                }
            });
            
            calendar.render();
        }

        function loadCharts() {
            // Destroy existing charts if they exist
            if (projectStatusChart) projectStatusChart.destroy();
            if (healthTrendChart) healthTrendChart.destroy();
            if (analyticsHealthTrendChart) analyticsHealthTrendChart.destroy();
            if (speciesTypeChart) speciesTypeChart.destroy();
            if (maintenanceTypeChart) maintenanceTypeChart.destroy();
            if (monthlyActivityChart) monthlyActivityChart.destroy();
            
            // Load data
            const projects = db.getProjects();
            const assessments = db.getAssessments();
            const species = db.getSpecies();
            const maintenance = db.getMaintenance();
            
            // Project Status Chart
            const projectStatusData = {
                'planning': 0,
                'active': 0,
                'on-hold': 0,
                'completed': 0
            };
            
            projects.forEach(project => {
                projectStatusData[project.status]++;
            });
            
            const projectStatusColors = {
                'planning': 'rgba(54, 162, 235, 0.8)',
                'active': 'rgba(75, 192, 192, 0.8)',
                'on-hold': 'rgba(255, 206, 86, 0.8)',
                'completed': 'rgba(153, 102, 255, 0.8)'
            };
            
            const projectStatusLabels = Object.keys(projectStatusData).map(key => 
                key.charAt(0).toUpperCase() + key.slice(1)
            );
            
            projectStatusChart = new Chart(document.getElementById('projectStatusChart'), {
                type: 'doughnut',
                data: {
                    labels: projectStatusLabels,
                    datasets: [{
                        data: Object.values(projectStatusData),
                        backgroundColor: Object.keys(projectStatusData).map(status => projectStatusColors[status]),
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Ecosystem Health Trends Chart for Dashboard
            const sortedAssessments = [...assessments].sort((a, b) => new Date(a.date) - new Date(b.date));
            const healthValues = {
                'excellent': 5,
                'good': 4,
                'fair': 3,
                'poor': 2,
                'degraded': 1
            };
            
            healthTrendChart = new Chart(document.getElementById('healthTrendChart'), {
                type: 'line',
                data: {
                    labels: sortedAssessments.map(a => formatDate(a.date, 'short')),
                    datasets: [{
                        label: 'Health Score',
                        data: sortedAssessments.map(a => healthValues[a.health]),
                        fill: false,
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1,
                        pointBackgroundColor: sortedAssessments.map(a => {
                            const colors = {
                                'excellent': 'rgb(40, 167, 69)',
                                'good': 'rgb(23, 162, 184)',
                                'fair': 'rgb(255, 193, 7)',
                                'poor': 'rgb(255, 132, 17)',
                                'degraded': 'rgb(220, 53, 69)'
                            };
                            return colors[a.health];
                        }),
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            min: 0,
                            max: 6,
                            ticks: {
                                callback: function(value) {
                                    const labels = {
                                        1: 'Degraded',
                                        2: 'Poor',
                                        3: 'Fair',
                                        4: 'Good',
                                        5: 'Excellent'
                                    };
                                    return labels[value] || '';
                                }
                            }
                        }
                    }
                }
            });
            
            // Ecosystem Health Trends Chart for Analytics
            const healthTrendData = assessments
                .filter(a => a.healthScore)
                .sort((a, b) => new Date(a.date) - new Date(b.date));
            
            if (healthTrendData.length > 0) {
                analyticsHealthTrendChart = new Chart(document.getElementById('analyticsHealthTrendChart'), {
                    type: 'line',
                    data: {
                        labels: healthTrendData.map(a => formatDate(a.date, 'short')),
                        datasets: [{
                            label: 'Ecosystem Health Score',
                            data: healthTrendData.map(a => a.healthScore.total),
                            borderColor: 'rgb(75, 192, 192)',
                            backgroundColor: 'rgba(75, 192, 192, 0.1)',
                            tension: 0.3,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                min: 0,
                                max: 100,
                                title: {
                                    display: true,
                                    text: 'Health Score (0-100)'
                                }
                            }
                        }
                    }
                });
            } else {
                document.getElementById('analyticsHealthTrendChart').closest('.card-body').innerHTML = 
                    '<p class="text-muted text-center">No ecosystem health data available yet. Create assessments with health scores to see trends.</p>';
            }
            
            // Species Type Chart
            const speciesTypeData = {
                'plant': 0,
                'animal': 0,
                'bird': 0,
                'reptile': 0,
                'insect': 0
            };
            
            species.forEach(s => {
                speciesTypeData[s.type]++;
            });
            
            speciesTypeChart = new Chart(document.getElementById('speciesTypeChart'), {
                type: 'pie',
                data: {
                    labels: Object.keys(speciesTypeData).map(key => 
                        key.charAt(0).toUpperCase() + key.slice(1)
                    ),
                    datasets: [{
                        data: Object.values(speciesTypeData),
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 206, 86, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(255, 159, 64, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Maintenance Type Chart
            const maintenanceTypeData = {
                'weed-control': 0,
                'revegetation': 0,
                'monitoring': 0,
                'survey': 0,
                'erosion-control': 0,
                'pest-management': 0,
                'water-quality': 0,
                'trail-maintenance': 0,
                'equipment': 0,
                'other': 0
            };
            
            maintenance.forEach(item => {
                maintenanceTypeData[item.type]++;
            });
            
            // Filter out types with zero count
            const filteredMaintenanceTypes = Object.keys(maintenanceTypeData).filter(key => maintenanceTypeData[key] > 0);
            
            maintenanceTypeChart = new Chart(document.getElementById('maintenanceTypeChart'), {
                type: 'bar',
                data: {
                    labels: filteredMaintenanceTypes.map(key => 
                        key.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')
                    ),
                    datasets: [{
                        label: 'Number of Activities',
                        data: filteredMaintenanceTypes.map(key => maintenanceTypeData[key]),
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
            
            // Monthly Activity Chart
            const monthlyData = {};
            const lastSixMonths = [];
            const now = new Date();
            
            // Generate last 6 months labels
            for (let i = 5; i >= 0; i--) {
                const date = new Date(now.getFullYear(), now.getMonth() - i, 1);
                const monthKey = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
                const monthLabel = date.toLocaleString('default', { month: 'short', year: 'numeric' });
                lastSixMonths.push(monthKey);
                monthlyData[monthKey] = { 
                    label: monthLabel, 
                    assessments: 0,
                    maintenance: 0
                };
            }
            
            // Count assessments by month
            assessments.forEach(assessment => {
                const date = new Date(assessment.date);
                const monthKey = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
                
                if (monthlyData[monthKey]) {
                    monthlyData[monthKey].assessments++;
                }
            });
            
            // Count maintenance by month
            maintenance.forEach(item => {
                const date = new Date(item.date);
                const monthKey = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
                
                if (monthlyData[monthKey]) {
                    monthlyData[monthKey].maintenance++;
                }
            });
            
            monthlyActivityChart = new Chart(document.getElementById('monthlyActivityChart'), {
                type: 'bar',
                data: {
                    labels: lastSixMonths.map(key => monthlyData[key].label),
                    datasets: [
                        {
                            label: 'Assessments',
                            data: lastSixMonths.map(key => monthlyData[key].assessments),
                            backgroundColor: 'rgba(75, 192, 192, 0.8)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Maintenance',
                            data: lastSixMonths.map(key => monthlyData[key].maintenance),
                            backgroundColor: 'rgba(255, 159, 64, 0.8)',
                            borderColor: 'rgba(255, 159, 64, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        // ==================== DATA EXPORT/IMPORT FUNCTIONS ====================

        function exportData() {
            const projectId = document.getElementById('exportProject').value;
            const exportFormat = document.querySelector('input[name="exportFormat"]:checked').value;
            
            if (exportFormat === 'json') {
                exportToJSON(projectId);
            } else if (exportFormat === 'pdf') {
                exportToPDF(projectId);
            } else if (exportFormat === 'excel') {
                exportToExcel(projectId);
            }
        }

        function exportToJSON(projectId) {
            const data = {
                projects: projectId === 'all' ? db.getProjects() : db.getProjects().filter(p => p.id === projectId),
                assessments: projectId === 'all' ? db.getAssessments() : db.getAssessments().filter(a => a.projectId === projectId),
                species: projectId === 'all' ? db.getSpecies() : db.getSpecies().filter(s => s.projectId === projectId),
                maintenance: projectId === 'all' ? db.getMaintenance() : db.getMaintenance().filter(m => m.projectId === projectId),
                exportedAt: new Date().toISOString(),
                app: 'EcoManager Pro'
            };
            
            const dataStr = JSON.stringify(data, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = `ecomanager-${projectId === 'all' ? 'all-projects' : 'project-' + projectId}-${new Date().toISOString().slice(0, 10)}.json`;
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
            
            showToast('Export Successful', 'Data has been exported successfully', 'success');
        }

        function exportToPDF(projectId) {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Add title
            doc.setFontSize(20);
            doc.text('EcoManager Pro Report', 105, 15, { align: 'center' });
            doc.setFontSize(12);
            doc.text(`Generated on: ${new Date().toLocaleDateString()}`, 105, 22, { align: 'center' });
            
            let yPosition = 30;
            
            // Project information
            const projects = projectId === 'all' ? db.getProjects() : db.getProjects().filter(p => p.id === projectId);
            
            if (projects.length > 0) {
                doc.setFontSize(16);
                doc.text('Projects', 14, yPosition);
                yPosition += 10;
                
                projects.forEach((project, index) => {
                    if (yPosition > 260) {
                        doc.addPage();
                        yPosition = 20;
                    }
                    
                    doc.setFontSize(12);
                    doc.setFont(undefined, 'bold');
                    doc.text(`${index + 1}. ${project.name}`, 14, yPosition);
                    doc.setFont(undefined, 'normal');
                    
                    yPosition += 7;
                    doc.text(`Status: ${project.status}`, 14, yPosition);
                    yPosition += 7;
                    doc.text(`Progress: ${project.progress || 0}%`, 14, yPosition);
                    yPosition += 7;
                    doc.text(`Start Date: ${formatDate(project.startDate)}`, 14, yPosition);
                    
                    // Add location information if available
                    if (project.latitude && project.longitude) {
                        yPosition += 7;
                        doc.text(`Location: ${project.latitude}, ${project.longitude}`, 14, yPosition);
                    }
                    
                    yPosition += 7;
                    doc.text(`Description: ${project.description}`, 14, yPosition);
                    yPosition += 10;
                });
            }
            
            // Add a new page if we're at the bottom
            if (yPosition > 260) {
                doc.addPage();
                yPosition = 20;
            }
            
            // Assessments information
            const assessments = projectId === 'all' ? db.getAssessments() : db.getAssessments().filter(a => a.projectId === projectId);
            
            if (assessments.length > 0) {
                doc.setFontSize(16);
                doc.text('Assessments', 14, yPosition);
                yPosition += 10;
                
                assessments.forEach((assessment, index) => {
                    if (yPosition > 260) {
                        doc.addPage();
                        yPosition = 20;
                    }
                    
                    doc.setFontSize(12);
                    doc.setFont(undefined, 'bold');
                    doc.text(`${index + 1}. ${formatDate(assessment.date)} - ${assessment.assessor}`, 14, yPosition);
                    doc.setFont(undefined, 'normal');
                    
                    yPosition += 7;
                    doc.text(`Health Status: ${assessment.health}`, 14, yPosition);
                    yPosition += 7;
                    doc.text(`Project: ${getProjectName(assessment.projectId)}`, 14, yPosition);
                    yPosition += 7;
                    doc.text(`Description: ${assessment.description.substring(0, 100)}...`, 14, yPosition);
                    yPosition += 10;
                });
            }
            
            // Save the PDF
            const fileName = `ecomanager-report-${projectId === 'all' ? 'all-projects' : 'project-' + projectId}-${new Date().toISOString().slice(0, 10)}.pdf`;
            doc.save(fileName);
            
            showToast('PDF Export Successful', 'PDF report has been generated successfully', 'success');
        }

        function exportToExcel(projectId) {
            // Create a new workbook
            const wb = XLSX.utils.book_new();
            
            // Projects sheet
            const projects = projectId === 'all' ? db.getProjects() : db.getProjects().filter(p => p.id === projectId);
            const projectsData = projects.map(p => ({
                Name: p.name,
                Code: p.code || '',
                Status: p.status,
                Progress: p.progress || 0,
                'Start Date': formatDate(p.startDate),
                Latitude: p.latitude || '',
                Longitude: p.longitude || '',
                Description: p.description
            }));
            
            const projectsSheet = XLSX.utils.json_to_sheet(projectsData);
            XLSX.utils.book_append_sheet(wb, projectsSheet, 'Projects');
            
            // Assessments sheet
            const assessments = projectId === 'all' ? db.getAssessments() : db.getAssessments().filter(a => a.projectId === projectId);
            const assessmentsData = assessments.map(a => ({
                Date: formatDate(a.date),
                Assessor: a.assessor,
                'Health Status': a.health,
                Project: getProjectName(a.projectId),
                Description: a.description
            }));
            
            const assessmentsSheet = XLSX.utils.json_to_sheet(assessmentsData);
            XLSX.utils.book_append_sheet(wb, assessmentsSheet, 'Assessments');
            
            // Species sheet
            const species = projectId === 'all' ? db.getSpecies() : db.getSpecies().filter(s => s.projectId === projectId);
            const speciesData = species.map(s => ({
                'Common Name': s.name,
                'Scientific Name': s.scientificName || '',
                Type: s.type,
                Status: s.status,
                Project: getProjectName(s.projectId),
                Description: s.description
            }));
            
            const speciesSheet = XLSX.utils.json_to_sheet(speciesData);
            XLSX.utils.book_append_sheet(wb, speciesSheet, 'Species');
            
            // Maintenance sheet
            const maintenance = projectId === 'all' ? db.getMaintenance() : db.getMaintenance().filter(m => m.projectId === projectId);
            const maintenanceData = maintenance.map(m => ({
                Activity: m.activity,
                Type: m.type,
                'Scheduled Date': formatDate(m.date),
                Status: m.status,
                Priority: m.priority,
                Project: getProjectName(m.projectId),
                Description: m.description
            }));
            
            const maintenanceSheet = XLSX.utils.json_to_sheet(maintenanceData);
            XLSX.utils.book_append_sheet(wb, maintenanceSheet, 'Maintenance');
            
            // Generate and download the Excel file
            const fileName = `ecomanager-${projectId === 'all' ? 'all-projects' : 'project-' + projectId}-${new Date().toISOString().slice(0, 10)}.xlsx`;
            XLSX.writeFile(wb, fileName);
            
            showToast('Excel Export Successful', 'Excel spreadsheet has been generated successfully', 'success');
        }

        function importData() {
            const fileInput = document.getElementById('importFile');
            const overwriteData = document.getElementById('overwriteData').checked;
            
            if (!fileInput.files.length) {
                showToast('Import Error', 'Please select a file to import', 'error');
                return;
            }
            
            const file = fileInput.files[0];
            const reader = new FileReader();
            
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    
                    // Validate the imported data structure
                    if (!data.projects || !data.assessments || !data.species || !data.maintenance) {
                        throw new Error('Invalid file format');
                    }
                    
                    if (overwriteData) {
                        // Completely replace existing data
                        localStorage.setItem('projects', JSON.stringify(data.projects));
                        localStorage.setItem('assessments', JSON.stringify(data.assessments));
                        localStorage.setItem('species', JSON.stringify(data.species));
                        localStorage.setItem('maintenance', JSON.stringify(data.maintenance));
                    } else {
                        // Merge with existing data
                        const existingProjects = db.getProjects();
                        const existingAssessments = db.getAssessments();
                        const existingSpecies = db.getSpecies();
                        const existingMaintenance = db.getMaintenance();
                        
                        // Merge projects, avoiding duplicates by ID
                        const mergedProjects = [...existingProjects];
                        data.projects.forEach(newProject => {
                            if (!existingProjects.find(p => p.id === newProject.id)) {
                                mergedProjects.push(newProject);
                            }
                        });
                        
                        // Merge assessments
                        const mergedAssessments = [...existingAssessments];
                        data.assessments.forEach(newAssessment => {
                            if (!existingAssessments.find(a => a.id === newAssessment.id)) {
                                mergedAssessments.push(newAssessment);
                            }
                        });
                        
                        // Merge species
                        const mergedSpecies = [...existingSpecies];
                        data.species.forEach(newSpecies => {
                            if (!existingSpecies.find(s => s.id === newSpecies.id)) {
                                mergedSpecies.push(newSpecies);
                            }
                        });
                        
                        // Merge maintenance
                        const mergedMaintenance = [...existingMaintenance];
                        data.maintenance.forEach(newMaintenance => {
                            if (!existingMaintenance.find(m => m.id === newMaintenance.id)) {
                                mergedMaintenance.push(newMaintenance);
                            }
                        });
                        
                        // Save merged data
                        localStorage.setItem('projects', JSON.stringify(mergedProjects));
                        localStorage.setItem('assessments', JSON.stringify(mergedAssessments));
                        localStorage.setItem('species', JSON.stringify(mergedSpecies));
                        localStorage.setItem('maintenance', JSON.stringify(mergedMaintenance));
                    }
                    
                    // Refresh the UI
                    loadDashboard();
                    loadProjects();
                    loadAssessments();
                    loadSpecies();
                    loadMaintenance();
                    loadProjectSelects();
                    
                    showToast('Import Successful', 'Data has been imported successfully', 'success');
                    
                    // Clear the file input
                    fileInput.value = '';
                    
                } catch (error) {
                    console.error('Import error:', error);
                    showToast('Import Error', 'Failed to import data. Please check the file format.', 'error');
                }
            };
            
            reader.onerror = function() {
                showToast('Import Error', 'Failed to read the file', 'error');
            };
            
            reader.readAsText(file);
        }

        function loadDataSummary() {
            document.getElementById('data-projects-count').textContent = db.getProjects().length;
            document.getElementById('data-assessments-count').textContent = db.getAssessments().length;
            document.getElementById('data-species-count').textContent = db.getSpecies().length;
            document.getElementById('data-maintenance-count').textContent = db.getMaintenance().length;
        }

        // ==================== FORM HANDLERS ====================

        document.getElementById('projectForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const project = {
                name: document.getElementById('projectName').value,
                code: document.getElementById('projectCode').value,
                startDate: document.getElementById('projectStartDate').value,
                status: document.getElementById('projectStatus').value,
                progress: parseInt(document.getElementById('projectProgress').value),
                description: document.getElementById('projectDescription').value,
                latitude: document.getElementById('projectLatitude').value,
                longitude: document.getElementById('projectLongitude').value
            };
            
            // Check if we're updating an existing project
            const editId = this.dataset.editId;
            if (editId) {
                db.updateProject(editId, project);
                delete this.dataset.editId;
                this.querySelector('button[type="submit"]').textContent = 'Save Project';
                showToast('Success', 'Project updated successfully');
            } else {
                db.saveProject(project);
                showToast('Success', 'Project created successfully');
            }
            
            this.reset();
            clearProjectMarker();
            document.getElementById('projectProgress').value = 0;
            document.getElementById('progressValue').textContent = '0%';
            loadProjects();
            loadDataSummary();
        });

        document.getElementById('assessmentForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect scoring data
            const scoringData = {
                vegetationCover: document.getElementById('vegetationCover').value,
                nativeSpecies: document.getElementById('nativeSpecies').value,
                weedCover: document.getElementById('weedCover').value,
                soilStability: document.getElementById('soilStability').value,
                speciesRichness: document.getElementById('speciesRichness').value
            };
            
            // Calculate health score
            const healthScore = ecosystemScoring.calculateHealthScore(scoringData);
            
            const assessment = {
                date: document.getElementById('assessmentDate').value,
                assessor: document.getElementById('assessor').value,
                health: healthScore.rating, // Use calculated rating
                projectId: document.getElementById('assessmentProject').value,
                description: document.getElementById('assessmentDescription').value,
                // Store detailed scoring data
                scoringData: scoringData,
                healthScore: healthScore
            };
            
            db.saveAssessment(assessment);
            this.reset();
            loadAssessments();
            loadDataSummary();
            
            // Show score summary
            showToast(
                'Assessment Saved', 
                `Health Score: ${healthScore.total}/100 (${healthScore.rating})`, 
                ecosystemScoring.getHealthColor(healthScore.total)
            );
        });

        document.getElementById('speciesForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const species = {
                name: document.getElementById('speciesName').value,
                scientificName: document.getElementById('scientificName').value,
                type: document.getElementById('speciesType').value,
                status: document.getElementById('speciesStatus').value,
                projectId: document.getElementById('speciesProject').value,
                description: document.getElementById('speciesDescription').value
            };
            
            db.saveSpecies(species);
            this.reset();
            loadSpecies();
            loadDataSummary();
            showToast('Success', 'Species added successfully');
